{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["@testing-library/jest-dom", "@testing-library/user-event", "vite/client", "jest"],
    "target": "esnext",  // ou "es6"
    "module": "esnext", 
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*"],  // Inclus tous les fichiers sources
  "exclude": ["node_modules"]
}
